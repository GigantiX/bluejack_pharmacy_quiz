<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    tools:context=".Cart">
    <LinearLayout
        android:id="@+id/cart_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/backCart"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            app:icon="@drawable/back_arrow"
            app:iconTint="@color/white"
            android:layout_width="43dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/green_1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:textSize="25dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="150dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/cart_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/img3"/>
        <LinearLayout
            android:id="@+id/cart_lay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blackmores Bio C"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity : 2"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="7dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 200.000"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="7dp">
            <Button
                android:id="@+id/cart_update"
                android:layout_below="@id/topbarHomePage"
                android:layout_marginLeft="25dp"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:backgroundTint="@color/transparent"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/green_1"
                android:textSize="17dp"
                android:stateListAnimator="@null"
                app:cornerRadius="7dp"
                app:strokeColor="@color/green_1"
                app:strokeWidth="3dp" />
            <Button
                android:id="@+id/cart_delete"
                android:layout_below="@id/topbarHomePage"
                android:layout_marginLeft="25dp"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:backgroundTint="@color/transparent"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/green_1"
                android:textSize="17dp"
                android:stateListAnimator="@null"
                app:cornerRadius="7dp"
                app:strokeColor="@color/green_1"
                app:strokeWidth="3dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_alignParentBottom="true"
        android:gravity="right">
        <Button
            android:id="@+id/cart_pay"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/green_1"
            android:gravity="center"
            android:text="Pay"
            android:textAllCaps="false"
            android:textSize="17dp"
            app:cornerRadius="50dp"/>

    </LinearLayout>
</RelativeLayout>